<h2 class="pre-label font-size-base">Change password</h2>

<div class="bg-white p-4 p-lg-5 br-sm shadow-sm mb-3 mb-lg-5">
    <div class="form-group">
        <label class="pre-label pre-label-sm" for="old-pass">Old password</label>
        <input class="form-control form-control-simple" type="password" id="old-pass" value="">
    </div>
    <div class="form-group">
        <label class="pre-label pre-label-sm" for="new-pass">New password</label>
        <input class="form-control form-control-simple" type="password" id="new-pass" value="">
    </div>
    <div class="form-group">
        <label class="pre-label pre-label-sm" for="new-pass-rep">Repeat New password</label>
        <input class="form-control form-control-simple" type="password" id="new-pass-rep" value="">
    </div>
    <div class="text-right mt-4 pt-2">
        <button class="btn btn-rounded btn-outline-primary btn-sm px-3" type="button">
            <i class="fa fa-save mr-2"></i>
            Save changes</button>
    </div>
</div>
