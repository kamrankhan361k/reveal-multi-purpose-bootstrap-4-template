{{> comment title="Header"}}

<header class="cover pt-6 pt-lg-8 pb-2 pb-lg-6" style="background-image: url({{data.img}}demo/banner-1.jpg)">
    <div class="pb-2 py-lg-3">
        <div class="container text-light">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h2 class="mb-0 h4">Latest articles</h2>
                    <small class="pre-label d-none d-lg-block">Latest news</small>
                </div>
                <div class="col-lg-4 text-lg-right pt-2 pt-lg-0">
                    <ol class="breadcrumb breadcrumb-light justify-content-lg-end">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Library</a></li>
                        <li class="breadcrumb-item"><a href="#">Category</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Data</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</header>

{{> comment title="Blog content"}}

<section class="py-4 py-lg-5">
    <div class="container">
        <div class="row">

            <div class="col-lg-9">

                {{> blog-content}}

                {{> layout-pagination}}

            </div>

            <div class="col-lg-3">

                {{> blog-sidebar}}

            </div>

        </div>
    </div>
</section>
