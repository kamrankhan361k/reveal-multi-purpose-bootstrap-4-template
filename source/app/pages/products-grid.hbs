---
divider-bg: dark
divider-svg: light
demo: true
page-title: Product grid
page-subtitle: Cards grid preview
---
{{> comment title="Products grid"}}

<section class="py-3">
    <div class="container">
        <div class="row">

            {{> product-filter-sidebar}}

            {{> comment title="Products content"}}

            <div class="col-lg-9">

                {{> comment title="Products header"}}

                <div class="bg-white p-2 p-lg-3 shadow-sm mb-2 mb-lg-4">
                    {{> product-filter-header}}
                </div>

                {{> comment title="Products collection"}}

                <div class="row gutters-mobile">

                    {{#each (take data.products 12)}}
                    <div class="col-6 col-xl-4">
                        <div class="card card-fill border-0 mb-2 mb-lg-4 shadow-sm">
                            <div class="card-image">
                                <a href="product.html">
                                    <img src="{{../data.img}}/demo/{{img}}" class="card-img-top" alt="...">
                                </a>
                                {{#ifequal @index 1}}
                                <span class="card-badge badge badge-danger">50%</span>
                                {{/ifequal}}
                                {{#ifequal @index 3}}
                                <span class="card-badge badge badge-dark">Last offer</span>
                                {{/ifequal}}
                                {{#ifequal @index 7}}
                                <span class="card-badge badge badge-success">New</span>
                                {{/ifequal}}
                            </div>
                            <div class="card-body p-3 p-lg-4">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h2 class="card-title mb-1 h5">
                                            <a href="product.html">
                                                {{title}}
                                            </a>
                                        </h2>
                                        <small class="text-muted pre-label">
                                            <span>${{price}}</span>
                                            <s>${{old-price}}</s>
                                        </small>
                                    </div>
                                    <div>
                                        <a href="product.html" class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Add to cart">
                                            <i class="icon icon-cart font-size-xl"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {{/each}}
                </div>

                {{> layout-pagination}}

            </div>
        </div>
    </div>

</section>
